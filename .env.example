# Configuración de Base de Datos
# Para desarrollo LOCAL con PostgreSQL instalado: DB_HOST=localhost, DB_PORT=5432
# Para Docker: DB_HOST=localhost, DB_PORT=5433 (para conectarse DESDE tu PC con pgAdmin)
# NOTA: Dentro del contenedor Docker, DB_HOST se configura como "db" automáticamente
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geo_servicios_db
DB_USER=postgres
DB_PASSWORD=tu_contraseña_aqui

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# JWT Secret (genera uno seguro para producción)
JWT_SECRET=cambia_este_secret_por_uno_seguro
JWT_EXPIRES_IN=24h
